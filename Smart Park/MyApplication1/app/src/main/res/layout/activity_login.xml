<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:focusable="true"
    android:weightSum="1"
    android:background="@drawable/login1">


    <TextView
        android:layout_width="wrap_content"
        android:text="User Name"
        android:layout_height="wrap_content"
        style="@android:style/Theme.Holo.DialogWhenLarge" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Password"
        android:layout_height="wrap_content"
        style="@android:style/Theme.Holo.DialogWhenLarge" />

    <EditText
        android:id="@+id/etpassword"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/blogin"
        android:onClick="bloginclicked"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        style="@style/Base.Animation.AppCompat.Dialog"
        android:layout_gravity="center_horizontal"
        android:background="@color/secondary_text_disabled_material_dark"
        android:backgroundTint="#d3746a5c" />

    <Button
        android:id="@+id/registerlink"
        android:onClick="signupclicked"
        android:layout_marginBottom="15dp"
        android:text="SIGNUP"
        android:layout_width="157dp"

        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/secondary_text_disabled_material_dark" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_gravity="right" />


</LinearLayout>


